{
    "name": "WeCitizens",
    "version": "0.1",
    "description": "WeCitizens",
    "manifest_version": 2,
    "homepage_url": "http://WeCitizens.be/",
    "content_scripts": [
        {
            "matches": ["<all_urls>", "file:///*"],
            "css": ["css/bootstrap_popover.css"],
            "run_at": "document_start",
            "js":
				["lib/jquery-1.9.1.min.js",
				"lib/bootstrap.min.js",
				"utils/db_reader.js",
				"lib/compatibility.js",
				"lib/pdf.js",
				"utils/data_handler.js",
				"utils/init_popover.js",
				"scripts/content_script.js"]
        }
    ],
    "browser_action": {
        "default_title": "WeCitizens",
        "default_popup": "views/popup.html",
        "default_icon": "icons/icon48.png"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "96": "icons/icon48.png",
        "128": "icons/icon128.png" },

    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "webRequest",
        "*://34bw.be/*",
        "*://*/"
    ],
    "applications": {
        "gecko": {
            "id": "wecitizens@wecitizens.be"
        }
    },
	"background" : {
		"scripts" : ["scripts/background.js"]
	},
	"web_accessible_resources": ["lib/pdf.worker.js"]
}
